---
import ContentContainer from "./content-containers/ContentContainer.astro";
import { Icon } from "astro-icon/components";
---

<div class="outer-container">
    <ContentContainer>
        <div class="inner-container">
            <nav class="menu">
                <a id="mobile-logo" href={"/"}>
                    <Icon slot="logo" name="website-logo-2" class="logo" />
                </a>

                <div class="menu-toggle">
                    <input type="checkbox" />
                    <span></span>
                    <span></span>
                    <span></span>
                    <ul class="menu-item">
                        <li id="logo">
                            <a href={"/"}>
                                <Icon
                                    slot="logo"
                                    name="website-logo-2"
                                    class="logo"
                                />
                            </a>
                        </li>
                        <li class="listItem">
                            <a href={"#services"}>Services</a>
                        </li>
                        <li class="listItem">
                            <a href={"#about"}>About</a>
                        </li>

                        <!-- <li class="listItem">
                            <a href="/blog/"> Blog </a>
                        </li> -->
                    </ul>
                </div>
            </nav>
        </div>
    </ContentContainer>
</div>
<style>
    ul {
        display: flex;
        flex-direction: column;
    }

    li {
        margin-bottom: 10px;
    }

    li:first-child {
        margin-right: auto;
    }
    li:first-child {
        display: none;
    }

    li:not(:first-child) {
    }

    .menu-toggle {
        display: block;
        position: relative;
        top: 20px;
        z-index: 1;
        -webkit-user-select: none;
        user-select: none;
        a {
            transition: all 0.3s ease;
            &:hover {
                font-weight: 600;
            }
        }

        input {
            display: block;
            width: 40px;
            height: 32px;
            position: absolute;
            top: -7px;
            cursor: pointer;
            opacity: 0;
            z-index: 2;
            -webkit-touch-callout: none;
        }

        span {
            position: relative;
            display: block;
            width: 33px;
            height: 4px;
            margin-bottom: 5px;
            background-color: black;
            border-radius: 3px;
            z-index: 1;
            transform-origin: 4px 0px;
            transition: transform 0.5s cubic-bezier(0.77, 0.2, 0.05, 1)
                background 0.5s cubic-bezier(0.77, 0.2, 0.05, 1) opacity 0.55s
                ease;
            &:first-child {
                transform-origin: 0% 0%;
            }
            &:nth-last-child(2) {
                transform-origin: 0% 100%;
            }
        }
    }

    .menu-toggle {
        input {
            &:checked ~ span {
                opacity: 1;
                transform: rotate(45deg) translate(-2px, -1px);
                background: black;
                &:nth-last-child(3) {
                    opacity: 0;
                    transform: rotate(0deg) scale(0.2, 0.2);
                }
                &:nth-last-child(2) {
                    transform: rotate(-45deg) translate(0, -1px);
                }
            }
            &:checked ~ .menu-item {
                transform: none;
            }
        }
    }

    .menu-item {
        position: absolute;
        width: 75vw;
        padding: 75px 50px 50px 50px;
        background-color: var(--accent-light);
        -webkit-font-smoothing: antialiased;
        transform-origin: 0% 0%;
        transition: transform 0.5s cubic-bezier(0.77, 0.2, 0.05, 1);
        li {
            font-size: 0px 0px;
        }
        border: 1px solid var(--primary-colour);
        border-radius: 8px;
    }

    .menu {
        .menu-toggle {
            position: fixed;
            right: 0;
            input {
                right: 25px;
            }
            span {
                right: 25px;
            }
        }
        .menu-item {
            right: -50px;
            transform: translate(100%, 0);
            li {
                a {
                    &:hover {
                        padding-left: 5px;
                    }
                }
            }
        }
    }

    .logo {
        font-size: 35px;
    }

    @media only screen and (min-width: 576px) {
        .outer-container {
            margin-top: 20px;
        }
    }

    @media only screen and (min-width: 900px) {
        .menu {
            .menu-toggle {
                position: static;
                .menu-item {
                    position: static;
                    left: 0;
                    right: 0;
                    top: 0;
                    transform: none;
                    border: none;
                    padding: 0;
                    width: 100%;
                }

                span {
                    display: none;
                }
            }
        }

        li:first-child {
            display: block;
        }

        li:not(:first-child, :last-child) {
            margin-right: 30px;
        }
        span {
            display: none;
            position: static;
        }
        input[type="checkbox"] {
            display: none;
        }
        ul {
            flex-direction: row;
            justify-content: end;
        }

        #mobile-logo {
            display: none;
        }

        .logo {
            font-size: 50px;
        }
    }
    @media only screen and (min-width: 1200px) {
    }
    @media only screen and (min-width: 1440px) {
    }
</style>
